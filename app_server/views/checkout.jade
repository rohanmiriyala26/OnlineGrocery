//- views/checkout.jade
extends layout

block content
  // Include the checkout CSS
  link(rel='stylesheet', href='/styles/checkout.css')

  .checkout-container
    h1 Checkout
    .subtitle Please provide your shipping address and payment details below.

    // Display error message if present
    if error
      .error #{error}

    form(method='POST', action='/cart/checkout')
      .form-group
        label(for='address') Shipping Address:
        input(type='text', name='address', required=true, placeholder='Enter your address', class='input-field', value=user && user.address ? user.address : '')

      .form-group
        label(for='payment-method') Payment Method:
        select(name='payment-method', required=true, class='input-field')
          option(value='credit-card') Debit Card
          option(value='credit-card') Credit Card
          option(value='paypal') PayPal
          option(value='bank-transfer') Bank Transfer
          option(value='cash-on-delivery') Cash on Delivery

      .form-group
        label(for='comments') Additional Comments:
        textarea(name='comments', placeholder='Any special instructions?', class='input-field', rows='4')

      input(type='submit', value='Place Order', class='button')
